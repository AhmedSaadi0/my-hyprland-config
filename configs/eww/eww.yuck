(defwidget left_menu_button []
  (button
    :class "power"
    :onclick "sh ~/.config/eww/scripts/open_menu.sh" ""
  )
)

(defwindow left_menu
  :monitor 0
  :stacking "fg"
  :windowtype "normal"
  :wm-ignore true
  :class "left_menu"
  :geometry (
    geometry
    :width "18%"
    :height "50%"
    :x "10"
    :y "10"
  )
