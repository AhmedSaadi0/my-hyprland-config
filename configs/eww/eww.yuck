  )
)

(defpoll processes
  :interval "100s"
  "ps aux | wc -l"
)

(defpoll up_time
  :interval "360s"
  ; "awk '{print int($1 / 3600)}' /proc/uptime "
  "sh ~/.config/eww/scripts/uptime.sh"
)

(defpoll installed_packages
  :interval "360s"
  "pacman -Qq | wc -l"
)

