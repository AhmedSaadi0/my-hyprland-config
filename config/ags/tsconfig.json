{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "experimentalDecorators": true,
        "strict": true,
        "target": "ES2023",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "checkJs": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "astal/gtk3",
        "paths": {
            "astal": [
                "/usr/share/astal/gjs"
            ],
            "astal/*": [
                "/usr/share/astal/gjs/src/*"
            ]
        }
    }
}
